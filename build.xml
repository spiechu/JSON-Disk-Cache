<?xml version="1.0" encoding="UTF-8"?>
<project name="JSONDiskCache" default="build">

    <property name="basedir" value="${project.basedir}"/>
    <property name="build_dir" value="${basedir}/build"/>
    <property name="src_dir" value="${basedir}/src"/>
    <property name="tests_dir" value="${basedir}/tests"/>

    <target name="build" depends="prepare,unit_test"/>

    <target name="cleanup">
        <echo msg="Deleting build dir"/>
        <delete quiet="true" dir="${build_dir}"/>
    </target>

    <target name="prepare" depends="cleanup">
        <echo msg="Making build dir"/>
        <mkdir dir="${build_dir}"/>
        <mkdir dir="${build_dir}/coverage-report"/>

        <echo msg="Trying to set default.timezone ini (fixes Drone.io CI)"/>
        <php expression="ini_set('date.timezone', 'Europe/Warsaw');"/>
    </target>

    <target name="unit_test" depends="prepare">
        <coverage-setup database="${build_dir}/coverage-report/database.db">
            <fileset dir="${src_dir}">
                <include name="**/*.php"/>
                <exclude name="**/*Test.php"/>
            </fileset>
        </coverage-setup>

        <phpunit bootstrap="${tests_dir}/bootstrap.php" codecoverage="false">
            <formatter type="plain"/>
            <batchtest>
                <fileset dir="${tests_dir}" includes="**/*Test.php"/>
            </batchtest>
        </phpunit>

        <phpunit bootstrap="${tests_dir}/bootstrap.php" codecoverage="false">
            <formatter type="summary"/>
            <batchtest>
                <fileset dir="${tests_dir}" includes="**/*Test.php"/>
            </batchtest>
        </phpunit>

        <phpunit bootstrap="${tests_dir}/bootstrap.php" codecoverage="true">
            <formatter type="clover" todir="${build_dir}/coverage-report" outfile="cover.clover"/>
            <batchtest>
                <fileset dir="${tests_dir}" includes="**/*Test.php"/>
            </batchtest>
        </phpunit>

    </target>

</project>